# Example environment variables for Simple Chat UI
# These variables are REQUIRED for the application to connect to the backend.

# The base URL for your backend API chat endpoint (e.g., http://127.0.0.1:8007)
# The frontend will make POST requests to VITE_BACKEND_API_URL + VITE_BACKEND_API_PATH
VITE_BACKEND_API_URL=

# The path for the chat endpoint, relative to VITE_BACKEND_API_URL (e.g., /chat or /api/v1/stream)
VITE_BACKEND_API_PATH= 